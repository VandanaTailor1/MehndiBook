<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/mehndicolor"
       >
       <ImageView
           android:layout_width="@dimen/_56sdp"
           android:layout_height="@dimen/_56sdp"
           android:src="@drawable/avatar"
           android:id="@+id/imgAvtar"
           android:layout_margin="@dimen/_10sdp"
           />
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_toRightOf="@id/imgAvtar"
           android:layout_marginStart="@dimen/_9sdp"
           android:layout_centerVertical="true"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Duck UI"
               android:textColor="@color/white"
               android:fontFamily="@font/oleoscript_bold"
               android:textSize="@dimen/_12ssp"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Duckui@demo.com"
               android:textColor="@color/white"
               android:fontFamily="@font/oleoscript_bold"
               android:textSize="@dimen/_12ssp"
               />
       </LinearLayout>
   </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/homeLinear"
        >
        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_19sdp"
            android:src="@drawable/img_home"
            android:id="@+id/imghome"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_10sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/lufgamedium"
            android:textSize="@dimen/_15ssp"
            android:layout_marginStart="@dimen/_10sdp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/favLinear"
        >
        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_19sdp"
            android:src="@drawable/imgg_heart"
            android:id="@+id/imgfav"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_10sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favourite"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/lufgamedium"
            android:textSize="@dimen/_15ssp"
            android:layout_marginStart="@dimen/_10sdp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:id="@+id/notificationLinear"
        >
        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_19sdp"
            android:src="@drawable/img_noti_"
            android:id="@+id/imgnot"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_10sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/lufgamedium"
            android:textSize="@dimen/_15ssp"
            android:layout_marginStart="@dimen/_10sdp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:id="@+id/referLinear"
        >
        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_19sdp"
            android:src="@drawable/img_share"
            android:id="@+id/imgshare"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_10sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refer App"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/lufgamedium"
            android:textSize="@dimen/_15ssp"
            android:layout_marginStart="@dimen/_10sdp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:id="@+id/aboutLinear"
        >
        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_19sdp"
            android:src="@drawable/img_about_us"
            android:id="@+id/imgabout"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_10sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/lufgamedium"
            android:textSize="@dimen/_15ssp"
            android:layout_marginStart="@dimen/_10sdp"
            />
    </LinearLayout>


</LinearLayout>